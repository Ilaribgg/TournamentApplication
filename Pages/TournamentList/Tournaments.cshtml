@page
@model TournamentApplication.Pages.TournamentsListModel

@using TournamentApplication.Components
@using TournamentApplication.Models

<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Tournaments</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create"class="btn btn-info form-control text-white">New tournament</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Tournaments.Count() > 0)
            {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        <label asp-for="Tournaments.FirstOrDefault().TournamentTitle">Title</label>
                    </th>
                    <th>
                        @*@Html.DisplayNameFor(m => m.Tournaments.FirstOrDefault().TournamentTitle)*@
                        <label asp-for="Tournaments.FirstOrDefault().TournamentInfo">Info</label>
                    </th>
                    <th>
                        @*@Html.DisplayNameFor(m => m.Tournaments.FirstOrDefault().TournamentTitle)*@
                        <label asp-for="Tournaments.FirstOrDefault().TournamentType">Type</label>
                    </th>
                    <th>
                        @*@Html.DisplayNameFor(m => m.Tournaments.FirstOrDefault().TournamentTitle)*@
                        <label asp-for="Tournaments.FirstOrDefault().PlayerAmount">Players</label>
                    </th>
                    <th>

                    </th>
                </tr>
                @foreach (var item in Model.Tournaments)
                {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.TournamentTitle)
                </td>
                <td>
                    @Html.DisplayFor(m => item.TournamentInfo)
                </td>
                <td>
                    @Html.DisplayFor(m => item.TournamentType)
                </td>
                <td>
                    @Html.DisplayFor(m => item.PlayerAmount)
                </td>
                <td>
                    <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm ('Are you sure you want to delete this tournament?')" class="btn btn-danger btn-sm">Delete</button>
                    <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Edit</a>
                </td>
            </tr>
                }
            </table>
            }
            else
            {
                <p>No tournaments</p>
            }
        </form>
    </div>
    <div class="col-12" style="text-align:center">
        <br/>
        <span class="h3 text-info">OR</span>
        <br/><br/>
    </div>
    <div class="col-12 border p-3">

        <table id="DT_load" class="table table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Information</th>
                    <th>Type</th>
                    <th>Max players</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section Scripts {
<script src="~/js/tournamentList.js"></script>
}



