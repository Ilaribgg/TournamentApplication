@page
@model TournamentApplication.Pages.GameList.UpsertGameModel

<h2 class="text-info">@(Model.Game.GameId!=0? "Edit" : "Create") the game</h2>

<div class="border container" style="padding:30px;">
    <form method="post">
        @if (Model.Game.GameId != 0)
        {
            <input type="hidden" asp-for="Game.GameId" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly">
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Game.Publisher">Publisher</label>
            </div>
            <div class="col-6">
                <input asp-for="Game.Publisher" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Game.Image">Image URL</label>
            </div>
            <div class="col-6">
                <input asp-for="Game.Image" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Game.Title">Game name</label>
            </div>
            <div class="col-6">
                <input asp-for="Game.Title" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Game.Description">Tournament type</label>
            </div>
            <div class="col-6">
                <input asp-for="Game.Description" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2 offset-3">
                <button type="submit" class="btn btn-primary form-control">@(Model.Game.GameId!=0? "Update" : "Create")</button>
            </div>
            <div class="col-2">
                <a asp-page="Games" class="btn btn-success form-control">Back to list</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
