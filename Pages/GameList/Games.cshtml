@page
@model TournamentApplication.Pages.GamesModel


<div class="container row p-0 m-0">
    <div class="col-9">
        <h3>Game List</h3>
    </div>
    <div class="col-4">
        <a asp-page="UpsertGame" class="btn btn-info form-control text-white">New Game</a>
    </div>

    <div class="card-columns col-12 border p-3 mt-3">
        <form method="post">
            @foreach (var game in Model.Games)
        {
            <div class="card">
                <div class="card-img" style="background-image: url('@game.Image');"></div>
                <div class="card-body">
                    <h5 class="card-title">@game.Title</h5>
                            @Html.DisplayFor(m => game.Publisher)
                            @Html.DisplayFor(m => game.Description)
                            <button asp-page-handler="DeleteGame" asp-route-id="@game.GameId" onclick="return confirm ('Are you sure you want to delete this game?')" class="btn btn-danger btn-sm">Delete</button>
                            <a asp-page="UpsertGame" asp-route-id="@game.GameId" class="btn btn-success btn-sm text-white">Edit</a>
                </div>
            </div>
        }
        </form>
    </div>
    </div>
